# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# For production - MongoDB Atlas (Cloud):
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/issue-tracker?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure random string for production using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# CORS Configuration (REQUIRED for production)
# Set this to your Vercel frontend URL
CLIENT_URL=https://your-frontend-url.vercel.app
